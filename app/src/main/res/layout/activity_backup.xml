<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/romance"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:ignore="NewApi">

    <include
        layout="@layout/toolbar"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:text="@string/backup_info"
                    android:textSize="14sp"
                    android:textColor="@color/light_slate_gray"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/ll_record_size_backup"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:text="@string/record_size"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_record_size_backup"
                        android:text="@string/record_num"
                        android:textSize="15sp"
                        android:textColor="@color/light_slate_gray"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_record_type_size_backup"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:text="@string/record_type_size"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_record_type_size_backup"
                        android:text="@string/record_num"
                        android:textSize="15sp"
                        android:textColor="@color/light_slate_gray"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_record_tag_size_backup"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:text="@string/record_tag_size"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_record_tag_size_backup"
                        android:text="@string/record_num"
                        android:textSize="15sp"
                        android:textColor="@color/light_slate_gray"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_review_strategy_size_backup"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:text="@string/review_strategy_size"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_review_strategy_size_backup"
                        android:text="@string/record_num"
                        android:textSize="15sp"
                        android:textColor="@color/light_slate_gray"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_last_backup_backup"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:text="@string/last_backup"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_last_backup_backup"
                        android:text="@string/record_num"
                        android:textSize="15sp"
                        android:textColor="@color/light_slate_gray"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                    android:id="@+id/btn_upload_backup"
                    android:text="@string/upload_backup"
                    android:textColor="@color/romance"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/light_slate_gray"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btn_download_backup"
                    android:text="@string/download_backup"
                    android:textColor="@color/romance"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/light_slate_gray"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>